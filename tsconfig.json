{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"es2022"
		],
		"module": "commonjs",
		"outDir": "dist/js",
		"rootDir": "src",
		"strict": true,
		"target": "es6"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/types/*.ts",
		"node_modules"
	]
}
